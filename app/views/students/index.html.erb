Student Details
<br><br>
<% if current_user.has_role? :admin %>
  <%= link_to 'Add Student', new_student_path %>
  <br><br>
<% end %>
<table>
  <% @students.each do |s| %>
    <% i=1 %>
    <tr>
      <td><%= i %><% i+=1 %></td>
      <td><%= s.fname %></td>
      <td><%= s.lname %></td>
      <td><%= s.contact %></td>
      <td><%= link_to 'Show', student_path(s) %></td>
      <% if current_user.has_role? :admin or (current_user.has_role? :student and current_user.id==s.id) %>
        <td><%= link_to 'Edit', edit_student_path(s) %></td>
      <% end %>
      <% if current_user.has_role? :admin %>
        <td><%= link_to 'Delete', student_path(s), method: :delete, data: {confirm: "Are you sure you want to delete this student details?"} %></td>
      <% end %>
    </tr>
  <% end %>
</table>
